<Manager>:
    id: manager
    name: 'manager'


        
<Title>:
    cols: 2
    title_text: ""
    size_hint_y: 0.1
    size_hint_x: 1
    MDLabel:
        text: root.title_text
        size_hint_x: 0.9
        size_x: 0.9
        center_x: 0.5
        halign: 'center'
    MDIconButton:
        icon: "home"
        on_release: app.manager.current = 'home'
        size_x: 0.1

<URLScroll>:
    ScrollView:
        BoxLayout:
            id: buttonview
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            # Button to add new entry
            Button:
                text: 'Add New Entry'
                size_hint_y: None
                height: 50
                on_release: root.add_entry()
<TestScreen>:
    BoxLayout:
        orientation: "horizontal"
        Title:
            text: "Test"


<HomeScreen>:
    
    BoxLayout:
        orientation: 'vertical'
        Title:
            size_hint_y: 0.1
            title_text: 'Home'

        GridLayout:
            id: grid
            cols: 2
            size_hint_y: 
            height: self.minimum_height
            row_default_height: 40
            row_force_default: True
            padding: 10
            spacing: 10
            Button:
                text: "Download Video(s)"
                on_release: root.manager.current = 'download'
            Button:
                text: "Change Download Path"
            
            Button:
                text: "Download from text file"
            Button: 
                text: "Add to database"
            Button:
                text: "Output database"
                on_release: root.manager.current = 'output'
            Button:
                text: "Exit"
                on_release: app.stop()




<DatabaseOutputScreen>:
    id: output
    name: 'output'
    BoxLayout:
        orientation: 'vertical'
        id: body
        Title:
            title_text: 'Database Output'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            size_hint_x: 1
            MDFlatButton:
                text: "generate"
                on_release: root.generateData()
                size_hint_x: 0.5
            MDFlatButton:
                text: "clear"
                size_hint_x: 0.5
                on_release: root.clearData()

            



